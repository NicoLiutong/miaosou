<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <Button
            android:id="@+id/comic_numberBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/back" />
        <TextView
            android:id="@+id/comic_numberName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="@null"
            android:textColor="@color/white"
            android:textSize="19sp"
            />
        <Button
            android:id="@+id/comic_download"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/download_comic"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="25dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/comic_numberImage"
                android:layout_width="145dp"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/comic_numberUpdateType"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/comic_numberImage"
                android:layout_alignRight="@id/comic_numberImage"
                android:gravity="center"
                android:background="#61000000"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:id="@+id/comic_numberAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/comic_numberGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/comic_numberAuthor"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/comic_numberLastUpdateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/comic_numberGenre"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/comic_numberNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comic_numberAuthor"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/comic_numberPersonLove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comic_numberNumber"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/comic_numberFavourityCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    >

                    <Button
                        android:id="@+id/comic_numberFavourity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/comic_numberIntroduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:text="↓↓ 在线漫画列表 ↓↓"
                android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comic_numberRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
