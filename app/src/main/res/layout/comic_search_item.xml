<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<android.support.v7.widget.CardView
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/comic_searchImage"
            android:layout_centerInParent="true"
            android:layout_width="135dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/comic_searchPages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/comic_searchImage"
            android:layout_alignLeft="@id/comic_searchImage"
            android:background="#61000000"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/comic_searchNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/comic_searchImage"
            android:layout_alignLeft="@id/comic_searchImage"
            android:layout_alignRight="@id/comic_searchImage"
            android:gravity="center_horizontal"
            android:background="#61000000"
            android:textColor="@color/white"
            android:textSize="13sp"
            />
        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>