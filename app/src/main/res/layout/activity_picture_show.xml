<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_picture_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.animation.activity.PictureShowActivity">
<com.example.animation.view.RoundProgressBarWithNumber
    android:id="@+id/pb_picture_progress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:padding="5dp"
    app:progress_reached_bar_height="100dp"
    app:progress_text_color="#9e01ff"
    app:progress_reached_color="#149e01ff"
    app:progress_unreached_color="#9e01ff"
    />
    <com.bm.library.PhotoView
        android:id="@+id/pv_picture_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"/>

</RelativeLayout>
